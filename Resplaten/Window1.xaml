<Window x:Class="Resplaten.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="600" Width="800" Loaded="Window_Loaded" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Canvas Name="canvas">
        <Image Name="centerImage" Height="488" Width="500" Canvas.Top="12"></Image>
        <TextBox Width="500" Height="100" Name="colorTextbox" VerticalContentAlignment="Center" FontSize="40" Visibility="Hidden" BorderThickness="5"></TextBox>
        <TextBlock Name="guideTextblock" Width="400" Height="200"  TextAlignment="Center" FontSize="30" Text="欢迎你来参加心理学实验，本实验的目的是研究知觉和抓握的关系，在实验中，你将完成两个任务，持续时间约1小时" TextWrapping="Wrap" Visibility="Hidden"></TextBlock>
        <Label Name="crossLabel" Content="十" FontSize="20" HorizontalContentAlignment="Center"  Visibility="Hidden" Width="30" Height="40" VerticalContentAlignment="Center"></Label>
        <Label Name="tipLabel" Content="请按住空格键..." FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="200" Visibility="Hidden"></Label>
    </Canvas>
</Window>
